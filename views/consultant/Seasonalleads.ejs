<main>
	<%- include('../partials/agentSidebar') %>
	
	<div id="main-wrapper">
		
		<!-- <div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Previous Collections</h5>
		</div> -->
		
		<div class="tbl-header" style="max-height: 75%; overflow: auto;">
			<table  cellpadding="0" cellspacing="0"  border="0">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Donor name</th>
						<th scope="col">Address collected</th>
						<th scope="col">Phone</th>
						<th scope="col">Actions</th>
					</tr>
				</table>
			</div>
			<div class="tbl-content">
				<table cellpadding="0" cellspacing="0" border="0">
				<tbody>
					<% for(let i=0; i<previousCollections.length; i++) { %>
						<tr>
							<th scope="row"> <%= i+1 %> </th>
							<td> <%= previousCollections[i].donor.name + " " + previousCollections[i].donor.lastName %> </td>
							<td> <%= previousCollections[i].address %> </td>
							<td> <%= previousCollections[i].phone %> </td>
							<td><a href="/agent/collection/view/<%= previousCollections[i]._id %>" class="custom-btn btn-2">View</a></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
</main>