<main>
	<%- include('../partials/managementSidebar') %>
	
	<div id="main-wrapper">
		
		<!-- <div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Dashboard</h5>
		</div> -->
		
		<div class="tbl-header" style="max-height: 75%; overflow: auto;">
			<table  cellpadding="0" cellspacing="0"  border="0">
				<thead>
					<tr>
						<th scope="col"  style="width: 5%;">#</th>
						<th scope="col"  style="width: 7%;">Department</th>
						<th scope="col"  style="width: 8%;">name</th>
						<th scope="col"  style="width: 15%;">Email</th>
						<th scope="col"  style="width: 10%;">Phone</th>
						<th scope="col" style="width: 15%;">Action</th> <!-- Action Column for Edit/Photo -->
					</tr>
				</thead>
			</table>
		</div>
		<div class="tbl-content">
			<table cellpadding="0" cellspacing="0" border="0">
				<tbody>
					<% for(let i=0; i<admins.length; i++) { %>
						<tr>
							<th scope="row" style="width: 5%;"> <%= i+1 %> </th>
							<td  style="width: 7%;"> <%= admins[i].department  %> </td>
							<td  style="width: 8%;"> <%= admins[i].name %> </td>
							<td  style="width: 15%;"> <%= admins[i].email_id %> </td>
							<td  style="width: 10%;"> <%= admins[i].mobile_no %> </td>
							<td style="width: 15%;" >
								<!-- Edit User Button -->
								<a href="/admin/admins/<%= admins[i]._id %>" class="submit" > Edit </a>
								
							</td>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
</main>