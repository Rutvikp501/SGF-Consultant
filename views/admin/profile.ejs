<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		
		<!-- <div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Profile</h5>
		</div> -->
		
		<form action="/admin/profile?_method=PUT" method="POST" class="w-75 border ms-3 my-3 p-4 bg-white rounded-2 shadow" style="min-width: 400px;">
			
			<div class="row">
				<div class="col-sm-6 mb-4">
					<label for="code" class="form-label">Code</label>
					<input type="text" name="admin[name]" class="form-control" id="code" placeholder="Enter code.." value="<%= currentUser.code %>" disabled>
				</div>
				
				<div class="col-sm-6 mb-4">
					<label for="name" class="form-label">Name</label>
					<input type="text" name="admin[lastName]" class="form-control" id="name" placeholder="Enter name.." value="<%= currentUser.name %>" disabled>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-6 mb-4">
					<label for="email" class="form-label">Email</label>
				<input type="email" id="email" class="form-control" value="<%= currentUser.email_id %>" disabled>
				</div>
				
				<div class="col-sm-6 mb-4">
					<label for="phone" class="form-label">Phone</label>
				<input type="number" name="admin[phone]" class="form-control" id="phone" placeholder="Enter phone.." value="<%= currentUser.mobile_no %>" disabled>
				</div>
			</div>


			<div class="mb-4">
				<label for="dateOfJoining" class="form-label">Joining Date</label>
				<input type="text" name="admin[address]" class="form-control" id="dateOfJoining" placeholder="Joining Date.." value="<%= currentUser.dateOfJoining %>" disabled>
			</div>
			

			
			<button type="submit" class="btn w-75 d-block m-auto mt-4">Update</button>
		</form>
		
		
		
	</div>
</main>