<div class="logincontainer"style="margin-top: 60px;">
	<div class="login-box"> 
	

	<form action="/auth/signup" method="POST" class="login-form p-5 m-auto" style="min-width: 320px;" >

		<h2 class="text-center input-box" class="login-form p-5 m-auto">User Login</h2>
		<% if(typeof errors != 'undefined') { %>
			<% errors.forEach(function(error) { %>
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= error.msg %>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% }); %>
		<% } %>

		
		<div class="input-box">
			<input type="text" name="code"  id="user-code"  value="<%= typeof code != 'undefined' ? code : '' %>" required>
			<label >code</label>
		</div>
		<div class="input-box">
			<input type="text" name="user_name"  id="user-name"  value="<%= typeof user_name != 'undefined' ? user_name : '' %>" required>
			<label  >Name</label>
		</div>
		
		<div class="input-box">
			<input type="email" name="email_id"  id="email" value="<%= typeof email_id != 'undefined' ? email_id : '' %>" required>
			<label >Email Address</label>
		</div>
		<div class="input-box">
			<input type="password" name="password1"  id="password1"  value="<%= typeof password1 != 'undefined' ? password1 : '' %>" required>
			<label  >Password</label>
		</div>
		<div class="input-box">
			<input type="password" name="password2"  id="password2"  value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
			<label  >Confirm Password</label>
		</div>
		
		<div class="input-box">
			<!-- <label for="role" class="select-label">Login as</label> -->
			<select class="form-select" name="role" id="role" required>
				<option value="" disabled selected hidden>Select role</option>
				<option value="admin">Admin</option>
				<option value="consultant">Consultant</option>
			</select>
		</div>
		<button type="submit" class="buttonlogin">Submit</button>
		
		
		<div class="signup-link">
			<p> Already have an account?<a href="/auth/login">Login</a></p>
		</div>
		
	</form>
</div>
</div>