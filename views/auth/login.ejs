<div class=" ">
	<form action="/auth/login" method="POST" class="login-form m-auto p-5" >
		<h3 class="text-center input-box">User Login</h3>
		<div class="input-box">
			<label for="email_id" class="form-label">Email address</label>
			<input type="email" name="email_id" class="form-control" id="email_id" placeholder="Enter email.." required autofocus>
		</div>

		<div class="input-box">
			<label for="password" class="form-label">Password</label>
			<input type="password" name="password" class="form-control" id="password" placeholder="Enter password.." required>
		</div>

			<button type="submit" class="button">Submit</button>

		
	
		
		<div class="mt-3">
			<span>Don't have an account?</span>
			<a href="/auth/signup">Signup here</a>
		</div>
		
	</form>
</div>