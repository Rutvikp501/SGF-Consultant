<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Pending Leads</h5>
		</div>
		
		<div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
			<table class="table table-info table-striped table-hover m-0 bg-white">
				<thead>
					<tr>
						<th scope="col">Lead ID</th>
						<th scope="col">consultant code</th>
						<th scope="col">Name</th>
						<th scope="col">Type</th>
						<th scope="col">Event Location</th>
						<th scope="col">Status</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i<pendingLeads.length; i++) { %>
						<tr>
							<th scope="row"> <%= pendingLeads[i].leadID %> </th>
							<td> <%= pendingLeads[i].consultant_code %> </td>
							<td> <%= pendingLeads[i].name %> </td>
							<td> <%= pendingLeads[i].leadType %> </td>
							<td> <%= pendingLeads[i].eventLocation + " " + pendingLeads[i].pincode%> </td>
							<td class="fw-bold text-<%= pendingLeads[i].status %>"> <%= pendingLeads[i].status %> </td>
							<td><a href="/admin/Leads/view/<%= pendingLeads[i]._id %>" class="btn">View</a></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
</main>